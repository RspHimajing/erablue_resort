		DEBUGPRINTFORML ZP_SHOP_種族特徴変換({TARGET}, {変更フラグ:人種}, {TALENT:(変更箇所:人種)})
		CALL ZP_SHOP_種族特徴変換(TARGET, 変更フラグ:人種, TALENT:(変更箇所:人種))
		SIF RESULT == 0
			CALL SET_BODYSIZE(TARGET, 0)
	ENDIF
	SIF TALENT:(変更箇所:人種) != 6
		CONTINUE
	SELECTCASE CSTR:特殊種族
		CASE "クリスタリア"
			;クリスタリア
			TALENT:ハーヴィン耳 = 1
			TALENT:吸血鬼 = 0
			TALENT:発情期あり = 0
			TALENT:尻尾あり = 0
			TALENT:エルーン耳 = 0
