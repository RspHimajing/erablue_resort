			ELSE
				SIF LOCAL == 2 && !(GETBIT(TALENT:性別, 0) || (変更フラグ:雌雄 > -1 && GETBIT(変更フラグ:雌雄, 0)))
					LOCAL:1 ++
				SIF LOCAL == 3 && !(GETBIT(TALENT:性別, 1) || (変更フラグ:雌雄 > -1 && GETBIT(変更フラグ:雌雄, 1)))
					LOCAL:1 ++
			ENDIF
		NEXT
