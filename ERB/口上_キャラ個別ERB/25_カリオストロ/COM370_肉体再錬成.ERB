		ENDIF
		GOTO LOOP_START
	CASE 30 TO 39
		;男性器
		変更フラグ:竿長 = RESULT - 33
		GOTO LOOP_START
	CASE 40 TO 49
		;体格・身長
		IF RESULT == 47
		ELSEIF RESULT < 47
			変更フラグ:身長 = RESULT - 44
		ENDIF
