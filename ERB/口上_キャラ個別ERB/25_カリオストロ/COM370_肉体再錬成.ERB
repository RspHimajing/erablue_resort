					TALENT:吸血鬼 = 0
					TALENT:発情期あり = 0
					TALENT:尻尾あり = 0
					TALENT:エルーン耳 = 0
			ENDSELECT
		CASE 2
			TALENT:(変更箇所:LOCAL) = 変更フラグ:LOCAL
		CASE 3
			TALENT:(変更箇所:LOCAL) = 変更フラグ:LOCAL
	ENDSELECT
	[SKIPEND]
NEXT
