				CALL SET_BODYSIZE(TARGET,0)
			SIF TALENT:(変更箇所:LOCAL) != 6
				CONTINUE
			SELECTCASE CSTR:特殊種族
				CASE "クリスタリア"
					;クリスタリア
					TALENT:ハーヴィン耳 = 1
					TALENT:吸血鬼 = 0
					TALENT:発情期あり = 0
					TALENT:尻尾あり = 0
