;****************************************
;サイド領域の複数人一枚絵を登録するための関数
;****************************************
;・使い方
;「XXXX」を任意の文字列に書き換え、キャラの組み合わせと表示条件を入れる
;「XXXX」は既存の関数と被らないこと
;キャラの組み合わせは既存の関数と被らないこと、同じ組み合わせがないかどうか事前にチェックしてください
;処理的に、組み合わせのキャラが全員同じ場所にいないと条件は読まれません
;画像のサイズはおおよそ650*650程度が限度です
;****************************************

;--------------------------------------------------
;登録データ
;--------------------------------------------------
@複数人一枚絵_登録データ_さとり_こいし(動作モード, 指定キャラ)
#DIMS 動作モード
#DIM REF 指定キャラ
#DIM ザーメンキス前フラグ

SELECTCASE 動作モード
	CASE "初期登録"
		;キャラの組み合わせを指定、5キャラまで指定可能
		指定キャラ:0 = キャラ検索("[怨霊も恐れ怯む少女]古明地さとり")
		指定キャラ:1 = キャラ検索("[閉じた恋の瞳]古明地こいし")
		; 指定キャラ:2 = キャラ検索("")
		; 指定キャラ:3 = キャラ検索("")
		; 指定キャラ:4 = キャラ検索("")
	CASE "画像指定"
		;表示条件を分岐しつつ画像名を指定する

		;以下はキャラ0とキャラ1が同時パイズリしている時の例
		IF MODE_確認_完全一致("パイズリ系", 指定キャラ:0, PLAYER) >= 0 && MODE_確認_完全一致("パイズリ系", 指定キャラ:1, PLAYER) >= 0
			;画像の位置を指定する
			;例えば指定キャラ:0のフォルダに画像が入れてあるなら、以下のように指定
			SELECTCASE RAND:5
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルパイズリ1
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルパイズリ2
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルパイズリ3
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルパイズリ4
			CASE 4
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルパイズリ
			ENDSELECT
		;ダブルフェラ
		ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:0, PLAYER) >= 0 && MODE_確認_完全一致("フェラチオ系", 指定キャラ:1, PLAYER) >= 0
			SELECTCASE RAND:4
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルフェラチオ1
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルフェラチオ2
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルフェラチオ3
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブルフェラチオ
			ENDSELECT
		ELSEIF MODE_確認_完全一致("手コキ系", 指定キャラ:0, PLAYER) >= 0 && MODE_確認_完全一致("手コキ系", 指定キャラ:1, PLAYER) >= 0
			;画像の位置を指定する
			;指定キャラ:0のフォルダに指定
			SELECTCASE RAND:5
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブル手コキ
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブル手コキ1
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブル手コキ2
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブル手コキ3
			CASE 4
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ダブル手コキ4

			ENDSELECT
		;ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:0, MASTER) >= 0
		;	RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとりフェラ
		;ELSEIF MODE_確認_完全一致("フェラチオ系", 指定キャラ:1, MASTER) >= 0
		;	RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいしフェラ
		ELSEIF コマンド履歴:0 == 208
			SELECTCASE RAND:4
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて全裸にする
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて全裸にする1
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて全裸にする2
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて全裸にする3

			ENDSELECT

		ELSEIF (MODE_存在判定_完全一致("後背位", MASTER, 指定キャラ:0) || MODE_存在判定_完全一致("立ちバック", MASTER, 指定キャラ:0) || MODE_存在判定_完全一致("背面座位", MASTER, 指定キャラ:0)|| MODE_存在判定_完全一致("背面駅弁", MASTER, 指定キャラ:0)) && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER) 			
			SELECTCASE RAND:3
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_後背位
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_後背位1
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_後背位2
			ENDSELECT
		ELSEIF (MODE_存在判定_完全一致("後背位", MASTER, 指定キャラ:1) || MODE_存在判定_完全一致("立ちバック", MASTER, 指定キャラ:1) || MODE_存在判定_完全一致("背面座位", MASTER, 指定キャラ:1)|| MODE_存在判定_完全一致("背面駅弁", MASTER, 指定キャラ:1)) && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER) 
			SELECTCASE RAND:1
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいし_後背位
			ENDSELECT
		;後背位系以外のＶ挿入時
		ELSEIF MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER)  && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER) 
			SELECTCASE RAND:4
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_正常位
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_正常位1
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_正常位2
			CASE 3
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_正常位3
			ENDSELECT
		ELSEIF MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:1, MASTER)  && !MODE_存在判定_順不同("Ｖ挿入系", 指定キャラ:0, MASTER) 
			SELECTCASE RAND:3
			CASE 0
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいし_正常位
			CASE 1
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいし_正常位1
			CASE 2
				RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいし_正常位2
			ENDSELECT
		ELSEIF コマンド履歴:0 == 20 && MODE_存在判定_順不同("キス系", 指定キャラ:0, 指定キャラ:1)
			IF SELECTCOM_NAME履歴:0 == "ザーメンキス"
				SELECTCASE RAND:4
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ザーメンシェア
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ザーメンシェア1
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ザーメンシェア2
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_ザーメンシェア3

				ENDSELECT
				
			ELSE
			;漏れた場合
				SELECTCASE RAND:4
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_キス
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_キス1
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_キス2
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_キス3
				ENDSELECT
			ENDIF

		;たぶんこれで「同時愛撫または同時胸愛撫の直後」になるはず
		;挿入モード系でないときを想定した画像なので後ろのほうの分岐に
		ELSEIF GETBIT(FLAG:モード管理, モードビット_同時) && (コマンド履歴:0 == 1 || コマンド履歴:0 == 6)
			SELECTCASE RAND:3
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_揉み比べ
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_揉み比べ1
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_揉み比べ2

			ENDSELECT

		ELSEIF コマンド履歴:0== 6
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_同時に胸愛撫
		ELSEIF コマンド履歴:0 == 7
			RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_同時に乳首責め
		ELSEIF コマンド履歴:0== 11
			SELECTCASE RAND:7
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる1
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる2
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる3
				CASE 4
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる4
				CASE 5
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる5
				CASE 6
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_まとめて抱きしめる6
			ENDSELECT
		ELSEIF CFLAG:(指定キャラ:0):うふふ && CFLAG:(指定キャラ:1):うふふ
			IF TCVAR:(指定キャラ:0):膣内精液量 && TCVAR:(指定キャラ:1):膣内精液量
				SELECTCASE RAND:5
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_征服1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_征服2
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_征服3
				CASE 3
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_征服4
				CASE 4
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし_征服
				ENDSELECT
			ELSEIF TCVAR:(指定キャラ:0):膣内精液量
				SELECTCASE RAND:2
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_征服1
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_征服
				ENDSELECT
			ELSEIF TCVAR:(指定キャラ:1):膣内精液量
				SELECTCASE RAND:1
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/こいし_征服
				ENDSELECT
			ELSEIF  CSTR:(指定キャラ:0):着せ替え服 == "全裸"
				
				SELECTCASE RAND:3
				CASE 0
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_全裸にする
				CASE 1
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_全裸にする1
				CASE 2
					RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_全裸にする2

				ENDSELECT
			;ELSE
			;	SELECTCASE RAND:4
			;	CASE 0
			;		RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし1
			;	CASE 1
			;		RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし2
			;	CASE 2
			;		RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし3
			;	CASE 3
			;		RESULTS = %CSTR:(指定キャラ:0):画像フォルダ%/さとり_こいし/さとり_こいし4
			;	ENDSELECT
			ENDIF
		ENDIF
ENDSELECT

