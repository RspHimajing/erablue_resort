@証関数_ウィザードの証(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 通常ジョブ
	CASE "証名"
		TSTR:コマンド名受渡 = ウィザードの証
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = ハーミット
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = ソーサラー
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = ウィザード
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "敵をまとめて攻撃する魔術師の証。<br>"
		詳細文文字列受け渡し変数 += "全体攻撃や縦列攻撃など範囲魔法が得意。また毒を扱うことも可能。<br>"
		詳細文文字列受け渡し変数 += "装備すると頭が良くなったような気がする。気がするだけ。<br>"
ENDSELECT

;ランダム抽選では出現しない（入手法：ダンジョン「人食い鳥の島」のイベントで入手）
