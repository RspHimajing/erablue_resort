;-------------------------------------------------
;実行判定
;-------------------------------------------------

@RAPE_COM_ABLE208
;全部脱衣
;一括管理
SIF GLOBAL_RAPE_COMABLE(208)
	RETURN RESULT
;脱衣不可
SIF TALENT:脱衣不可
	RETURN 0

;既に全裸だったらダメ
LOCAL:1 = 0
FOR LOCAL, 150, 172
	SIF TEQUIP:LOCAL 
		LOCAL:1 = 1
NEXT
SIF !LOCAL:1
	RETURN 0

RETURN 1


